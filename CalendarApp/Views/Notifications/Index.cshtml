@model CalendarApp.Models.Notifications.NotificationListViewModel
@using CalendarApp.Services.Notifications.Models
@{
    ViewData["Title"] = "Известия";
    string ToggleClasses(NotificationReadFilter option) => Model.Filter == option ? "messenger-toggle__button is-active" : "messenger-toggle__button";
    string TogglePressed(NotificationReadFilter option) => Model.Filter == option ? "true" : "false";
}

<section class="notifications-page">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-1">Известия</h1>
            <p class="text-muted mb-0">@Model.UnreadCount непрочетени</p>
        </div>
        <div class="notification-toggle" role="tablist" aria-label="Филтриране на известията">
            <a asp-action="Index"
               asp-route-filter="@NotificationReadFilter.All"
               class="@ToggleClasses(NotificationReadFilter.All)"
               role="tab"
               aria-selected="@TogglePressed(NotificationReadFilter.All)"
               aria-pressed="@TogglePressed(NotificationReadFilter.All)">Всички</a>
            <a asp-action="Index"
               asp-route-filter="@NotificationReadFilter.Unread"
               class="@ToggleClasses(NotificationReadFilter.Unread)"
               role="tab"
               aria-selected="@TogglePressed(NotificationReadFilter.Unread)"
               aria-pressed="@TogglePressed(NotificationReadFilter.Unread)">Непрочетени</a>
            <a asp-action="Index"
               asp-route-filter="@NotificationReadFilter.Read"
               class="@ToggleClasses(NotificationReadFilter.Read)"
               role="tab"
               aria-selected="@TogglePressed(NotificationReadFilter.Read)"
               aria-pressed="@TogglePressed(NotificationReadFilter.Read)">Прочетени</a>
        </div>
    </div>

    <div class="card notification-card">
        <div class="card-body">
            @if (Model.Notifications == null || Model.Notifications.Count == 0)
            {
                <div class="notification-empty">Всички известия са разгледани!</div>
            }
            else
            {
                <ul class="notification-list">
                    @foreach (var notification in Model.Notifications)
                    {
                        var itemClasses = notification.IsRead ? "notification-item is-read" : "notification-item is-unread";
                        <li class="@itemClasses" data-notification-id="@notification.Id">
                            <div class="notification-item__icon notification-type-@notification.Type.ToString().ToLowerInvariant()"></div>
                            <div class="notification-item__content">
                                <div class="notification-item__message">@notification.Message</div>
                                <div class="notification-item__meta">
                                    <time datetime="@notification.CreatedAt.ToString("o")" class="notification-item__time">@notification.CreatedAt.ToLocalTime().ToString("g")</time>
                                    @if (!notification.IsRead)
                                    {
                                        <span class="badge rounded-pill bg-primary">Ново</span>
                                    }
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        window.calendarNotifications = window.calendarNotifications || {};
        window.calendarNotifications.filter = '@Model.Filter';
    </script>
}
