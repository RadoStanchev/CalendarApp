@model MeetingCreateViewModel
@{
    ViewData["Title"] = "Plan a meeting";
    var startValue = Model.StartTime?.ToLocalTime().ToString("yyyy-MM-ddTHH:mm");
}

<div class="meeting-form-page">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1">Plan a meeting</h1>
            <p class="text-muted mb-0">Create a new meeting and invite people without leaving this page.</p>
        </div>
    </div>

    <form asp-action="Create" method="post" class="meeting-form" data-meeting-form>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-4">
            <div class="col-12 col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label"></label>
                            <input asp-for="StartTime" type="datetime-local" class="form-control" value="@startValue" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label">Location</label>
                            <input asp-for="Location" class="form-control" placeholder="Add a location" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" class="form-select">
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id" selected="@(Model.CategoryId == category.Id ? true : false)" data-color="@category.Color">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-0">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Share meeting goals, agenda or context"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-6">
                <div class="card shadow-sm border-0 h-100" data-meeting-search-root data-search-url="@Url.Action("SearchContacts", new { })" data-show-status="false">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h2 class="h5 fw-semibold mb-0">Invite participants</h2>
                                <p class="text-muted small mb-0">Search your network and add them instantly.</p>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="input-group">
                                <span class="input-group-text">üîç</span>
                                <input type="search" class="form-control" placeholder="Search by name or email" data-meeting-search />
                            </div>
                            <div class="list-group mt-2 d-none" data-meeting-search-results></div>
                        </div>

                        <div>
                            <h3 class="h6 text-muted text-uppercase mb-2">Participants</h3>
                            <div class="selected-participants" data-meeting-selected data-empty-text="Start typing to invite people.">
                                @if (!Model.Participants.Any())
                                {
                                    <p class="text-muted small mb-0" data-meeting-empty>Start typing to invite people.</p>
                                }
                                @for (var i = 0; i < Model.Participants.Count; i++)
                                {
                                    var participant = Model.Participants[i];
                                    <div class="border rounded p-3 mb-2 d-flex justify-content-between align-items-start gap-3" data-participant data-contact-id="@participant.ContactId">
                                        <div>
                                            <div class="fw-semibold">@participant.DisplayName</div>
                                            <div class="text-muted small">@participant.Email</div>
                                        </div>
                                        <div class="text-end">
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-remove-participant>&times;</button>
                                        </div>
                                        <input type="hidden" data-contact-input name="Participants[@i].ContactId" value="@participant.ContactId" />
                                        <input type="hidden" data-status-input name="Participants[@i].Status" value="@((int)participant.Status)" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-end gap-2">
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Create meeting</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/meetings.js" asp-append-version="true"></script>
    <script>
        window.initMeetingParticipants && window.initMeetingParticipants({
            rootSelector: '[data-meeting-search-root]',
            showStatus: false
        });
    </script>
}
