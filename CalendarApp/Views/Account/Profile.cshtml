@model CalendarApp.Models.Account.ProfileViewModel
@{
    ViewData["Title"] = "Моят профил";
}

<h2 class="text-center mt-4">Моят профил</h2>

<div class="card w-50 mx-auto mt-4 shadow">
    <div class="card-body">
        <h4>@Model.FullName</h4>
        <p><strong>Имейл:</strong> @Model.Email</p>
        @if (Model.BirthDate != null)
        {
            <p><strong>Дата на раждане:</strong> @Model.BirthDate.Value.ToShortDateString()</p>
        }
        @if (!string.IsNullOrEmpty(Model.Address))
        {
            <p><strong>Адрес:</strong> @Model.Address</p>
        }
        @if (!string.IsNullOrEmpty(Model.Note))
        {
            <p><strong>Бележка:</strong> @Model.Note</p>
        }
        <div class="mt-3">
            <a asp-action="@nameof(AccountController.Edit)" class="btn btn-primary">Редакция на профил</a>
        </div>
    </div>
</div>

<form asp-action="@nameof(AccountController.Logout)" method="post" class="text-center mt-3">
    <button type="submit" class="btn btn-outline-danger">Изход</button>
</form>
